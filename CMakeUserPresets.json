{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev-base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "BUILD_MCSS_DOCS": "ON"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Default"
        }
      }
    },
    {
      "name": "dev-acpp",
      "binaryDir": "${sourceDir}/build/acpp/dev",
      "inherits": [
        "dev-base",
        "ci-test-acpp"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "dev-llvm-sycl",
      "binaryDir": "${sourceDir}/build/llvm/dev",
      "inherits": [
        "dev-base",
        "ci-test-llvm-sycl"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "dev-release-acpp",
      "binaryDir": "${sourceDir}/build/acpp/dev-release",
      "inherits": [
        "dev-acpp"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "dev-shared-lib-acpp",
      "binaryDir": "${sourceDir}/build/acpp/dev-shared-lib",
      "inherits": [
        "dev-release-acpp",
        "ci-linux-acpp"
      ],
      "cacheVariables": {
        "BUILD_SHARED_LIBS": "ON"
      }
    },
    {
      "name": "dev-shared-lib-llvm-sycl",
      "binaryDir": "${sourceDir}/build/llvm/dev-shared-lib",
      "inherits": [
        "dev-llvm-sycl",
        "ci-linux-llvm-sycl"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_SHARED_LIBS": "ON"
      }
    },
    {
      "name": "dev-coverage-acpp",
      "binaryDir": "${sourceDir}/build/acpp/coverage",
      "inherits": [
        "dev-base",
        "ci-coverage-acpp"
      ]
    },
    {
      "name": "dev-sanitize-acpp",
      "binaryDir": "${sourceDir}/build/acpp/sanitize",
      "inherits": [
        "dev-base",
        "ci-sanitize-acpp"
      ]
    },
    {
      "name": "dev-sanitize-llvm-sycl",
      "binaryDir": "${sourceDir}/build/llvm/sanitize",
      "inherits": [
        "dev-base",
        "ci-sanitize-llvm-sycl"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "dev-acpp",
      "configurePreset": "dev-acpp",
      "jobs": 16
    },
    {
      "name": "dev-llvm-sycl",
      "configurePreset": "dev-llvm-sycl",
      "jobs": 16
    },
    {
      "name": "dev-release-acpp",
      "configurePreset": "dev-release-acpp",
      "jobs": 16
    },
    {
      "name": "dev-shared-lib-acpp",
      "configurePreset": "dev-shared-lib-acpp",
      "jobs": 16
    },
    {
      "name": "dev-shared-lib-llvm-sycl",
      "configurePreset": "dev-shared-lib-llvm-sycl",
      "jobs": 16
    },
    {
      "name": "dev-coverage-acpp",
      "configurePreset": "dev-coverage-acpp",
      "jobs": 16
    },
    {
      "name": "dev-sanitize-acpp",
      "configurePreset": "dev-sanitize-acpp",
      "jobs": 16
    },
    {
      "name": "dev-sanitize-llvm-sycl",
      "configurePreset": "dev-sanitize-llvm-sycl",
      "jobs": 16
    }
  ]
}
